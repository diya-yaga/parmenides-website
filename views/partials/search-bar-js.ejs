<script>
    $(document).ready(function() {
        $('.search-button').on('click', function() {
            let userInput = $('#search-bar').val();

            if ($('#terms').is(':checked')) {
                $("#doc-table").addClass("invisible");
                $("#term-table").removeClass("invisible");
        
            } else {
                $("#term-table").addClass("invisible");
                $("#doc-table").removeClass("invisible");
        
            };

            for (var i = 0; i < $('.term-tr').length; i++) {
                if ($('.term-td').eq(i).html().trim() != userInput.trim()) {
                    $('.term-tr').eq(i).addClass("invisible-row");
                }   
            };
        });
    });
    
</script>